    {
      "name": "buildForArm",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.buildForArm",
      "defaultValue": false,
      "helpMarkDown": "ms-resource:loc.input.help.buildForArm",
      "visibleRule": "buildSolution = true && generateBundle = true"
    },
    {
      "name": "buildForAnyCpu",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.buildForAnyCpu",
