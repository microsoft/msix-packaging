    {
      "name": "buildForX64",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.buildForX64",
      "defaultValue": true,
      "helpMarkDown": "ms-resource:loc.input.help.buildForX64",
      "visibleRule": "buildSolution = true && generateBundle = true"
