      "name": "manifestFile",
      "type": "filePath",
      "label": "ms-resource:loc.input.label.manifestFile",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "ms-resource:loc.input.help.manifestFile",
      "visibleRule": "updateAppVersion = true"
